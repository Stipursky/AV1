genero = input("Insira o gênero: ")
h = float(input("Insira a altura: "))

if genero == "masculino":
    media = (72.7 * h) - 58
    print(f"\n O peso ideal para um homem, com altura de {h:.2f}m é de {media:.2f}Kg")

if genero == "feminino":
    media = (62.1 * h) - 44.7
    print(f"\n O peso ideal para uma mulher, com altura de {h:.2f}m é de {media:.2f}Kg")
